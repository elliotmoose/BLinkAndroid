<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:background="@color/colorGrey">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Your Registration"
            android:fontFamily="@font/montserrat"
            android:textSize="32sp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/event_register_heading"/>


        <TextView
            android:id="@+id/event_register_action_confirm"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/button_gradient_green"
            android:text="CONFIRM"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/event_register_heading"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textFontWeight="bold"/>



        <TextView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/button_gradient_blue"
            android:text="CANCEL"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/event_register_action_confirm"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:id="@+id/event_register_action_cancel"/>

    </RelativeLayout>
</RelativeLayout>