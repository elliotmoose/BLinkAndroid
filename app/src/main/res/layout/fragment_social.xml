<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".social.SocialFragment"
    android:background="@color/colorGrey">

    <LinearLayout
        android:id="@+id/socialRect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="@string/social"
            android:textColor="#474BAC"
            android:textSize="32sp"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/socialTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socialRect"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="#474BAC"
        app:tabTextColor="#474BAC">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary" />


        <android.support.design.widget.TabItem
            android:id="@+id/socialAllContacts_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Contacts" />

    </android.support.design.widget.TabLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/socialTab"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/social_profile_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:src="@drawable/selfie"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="3dp"
            app:layout_constraintEnd_toStartOf="@+id/fieldUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fieldSocialUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:text="@string/username"
            android:textColor="#474BAC"
            android:textSize="5pt"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/viewProfile"
            android:textColor="#47AAAA"
            android:textSize="5pt"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Recent Connections"
            android:textColor="#474BAC"
            android:textSize="8pt"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/button_gradient_blue">
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/socialNameCardRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>



<!--
        <include
            layout="@layout/fragment_social_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            -->

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

</RelativeLayout>